<mah:BaseMetroDialog x:Class="Learn.PrismFramework.Modules.Views.KeyboardDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:regions="http://www.codeplex.com/CompositeWPF"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:viewModels="clr-namespace:Learn.PrismFramework.Modules.ViewModels"
                 xmlns:views="clr-namespace:Learn.PrismFramework.Modules.Views"
                 mc:Ignorable="d"
                 d:DesignHeight="550" d:DesignWidth="650">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        
        <!-- <ContentControl Grid.Column="0" regions:RegionManager.RegionName="KeyboardRegion" /> -->
        <views:Keyboard Grid.Column="0" />
        
        <Button Grid.Column="1" Content="SUBMIT" Command="{Binding SubmitTextCommand}" />
    </Grid>
</mah:BaseMetroDialog>
