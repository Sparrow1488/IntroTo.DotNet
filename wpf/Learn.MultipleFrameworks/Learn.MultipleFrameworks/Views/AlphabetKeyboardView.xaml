<UserControl x:Class="Learn.MultipleFrameworks.Views.AlphabetKeyboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Learn.MultipleFrameworks;component/Styles/KeyboardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <Style x:Key="CapsButton" 
                   TargetType="ButtonBase" 
                   BasedOn="{StaticResource SizedShiftKeyButton}">
                <Setter Property="Content">
                    <Setter.Value>
                        <iconPacks:PackIconMaterialLight Kind="{Binding CapsIconKind}" />
                    </Setter.Value>
                </Setter>
                <Setter Property="Command" Value="{Binding SwitchCapsLockCommand}" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
            <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                     HorizontalContentAlignment="Stretch"
                     VerticalAlignment="Center"
                     FontSize="18"
                     VerticalContentAlignment="Center"
                     TextWrapping="WrapWithOverflow"
                     mah:TextBoxHelper.ClearTextButton="True"
                     Text="{Binding InputMask}" />
            <Button Grid.Row="0" Grid.Column="3" 
                    Style="{StaticResource SizedShiftKeyButton}"
                    Command="{Binding PressBackspaceCommand}">
                <Button.Content>
                    <iconPacks:PackIconMaterialLight Kind="ChevronLeft" />
                </Button.Content>
            </Button>
            <Button Grid.Row="0" Grid.Column="4" 
                    Style="{StaticResource SizedShiftKeyButton}"
                    Command="{Binding SubmitCommand}">
                <Button.Content>
                    <iconPacks:PackIconMaterialLight Kind="Check" />
                </Button.Content>
            </Button>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5">
            <ItemsControl ItemsSource="{Binding Layout[1]}" 
                          Style="{StaticResource KeyboardRowPanel}" />
        
            <ItemsControl ItemsSource="{Binding Layout[2]}" 
                          Style="{StaticResource KeyboardRowPanel}" />
        
            <ItemsControl ItemsSource="{Binding Layout[3]}" 
                          Style="{StaticResource KeyboardRowPanel}" />
            
            <ItemsControl ItemsSource="{Binding Layout[4]}" 
                          Style="{StaticResource KeyboardRowPanel}" />
        </StackPanel>
        
        <Button Grid.Row="2" Grid.Column="0"
                Style="{StaticResource CapsButton}" />
        <Button Grid.Row="2" Grid.Column="1" 
                Content="{Binding NextLayoutState}" 
                Command="{Binding SwitchLayoutStateCommand}"
                Style="{StaticResource SizedShiftKeyButton}"/>
        <Button Grid.Row="2" Grid.Column="2"
                MinWidth="150"
                Command="{Binding PressSpaceCommand}"
                Style="{StaticResource KeyButton}"/>
        <Button Grid.Row="2" Grid.Column="3" 
                Content="{Binding NextLayoutName}" 
                Command="{Binding SwitchLayoutCommand}"
                Style="{StaticResource SizedShiftKeyButton}"/>
        <Button Grid.Row="2" Grid.Column="4"
                Style="{StaticResource CapsButton}"/>
    </Grid>
</UserControl>